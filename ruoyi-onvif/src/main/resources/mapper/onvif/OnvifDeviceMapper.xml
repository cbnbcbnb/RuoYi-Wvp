<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.onvif.mapper.OnvifDeviceMapper">

    <resultMap type="OnvifDevice" id="OnvifDeviceResult">
        <result property="id"    column="id"    />
        <result property="ip"    column="ip"    />
        <result property="name"    column="name"    />
        <result property="userName"    column="user_name"    />
        <result property="password"    column="password"    />
        <result property="url"    column="url"    />
        <result property="firm"    column="firm"    />
        <result property="model"    column="model"    />
        <result property="firmwareVersion"    column="firmware_version"    />
        <result property="streamUris"    column="stream_uris"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectOnvifDeviceVo">
        select id, ip, name, user_name, password, url, firm, model, firmware_version, stream_uris, create_by, create_time, update_by, update_time, remark from onvif_device
    </sql>

    <select id="selectOnvifDeviceList" parameterType="OnvifDevice" resultMap="OnvifDeviceResult">
        <include refid="selectOnvifDeviceVo"/>
        <where>
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="firm != null  and firm != ''"> and firm = #{firm}</if>
            <if test="model != null  and model != ''"> and model = #{model}</if>
            <if test="firmwareVersion != null  and firmwareVersion != ''"> and firmware_version = #{firmwareVersion}</if>
            <if test="streamUris != null  and streamUris != ''"> and stream_uris = #{streamUris}</if>
        </where>
    </select>

    <select id="selectOnvifDeviceById" parameterType="Long" resultMap="OnvifDeviceResult">
        <include refid="selectOnvifDeviceVo"/>
        where id = #{id}
    </select>

    <insert id="insertOnvifDevice" parameterType="OnvifDevice" useGeneratedKeys="true" keyProperty="id">
        insert into onvif_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ip != null">ip,</if>
            <if test="name != null">name,</if>
            <if test="userName != null">user_name,</if>
            <if test="password != null">password,</if>
            <if test="url != null">url,</if>
            <if test="firm != null">firm,</if>
            <if test="model != null">model,</if>
            <if test="firmwareVersion != null">firmware_version,</if>
            <if test="streamUris != null">stream_uris,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ip != null">#{ip},</if>
            <if test="name != null">#{name},</if>
            <if test="userName != null">#{userName},</if>
            <if test="password != null">#{password},</if>
            <if test="url != null">#{url},</if>
            <if test="firm != null">#{firm},</if>
            <if test="model != null">#{model},</if>
            <if test="firmwareVersion != null">#{firmwareVersion},</if>
            <if test="streamUris != null">#{streamUris},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateOnvifDevice" parameterType="OnvifDevice">
        update onvif_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="ip != null">ip = #{ip},</if>
            <if test="name != null">name = #{name},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="password != null">password = #{password},</if>
            <if test="url != null">url = #{url},</if>
            <if test="firm != null">firm = #{firm},</if>
            <if test="model != null">model = #{model},</if>
            <if test="firmwareVersion != null">firmware_version = #{firmwareVersion},</if>
            <if test="streamUris != null">stream_uris = #{streamUris},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOnvifDeviceById" parameterType="Long">
        delete from onvif_device where id = #{id}
    </delete>

    <delete id="deleteOnvifDeviceByIds" parameterType="String">
        delete from onvif_device where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
